<div class="post">
<% @posts.each do |post| %>
  
    <h1><%= post.title %></h1>
    <p><%= post.text %></p> 
    <div><%= image_tag post.photo.url(:large) %></div>
    <div class="btn"><%= link_to 'Show', post_path(post) %></div>
   <div class="btn"><%= link_to 'Edit', edit_post_path(post) %></div>
    <div class="btn"><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></div>
 
<% end %>
